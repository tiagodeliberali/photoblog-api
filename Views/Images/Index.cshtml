@model IEnumerable<Photoblog.Api.Blog.Image>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a href="/admin/Posts/Details/@(ViewBag.PostId)">Go to post</a> |
    <a href="/admin/Images/Create?postId=@(ViewBag.PostId)">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="http://res.cloudinary.com/drzxualok/image/upload/c_lfill,h_80,w_80/@(item.Url)" alt="@(item.Description)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
